{
    "name": "websocket-monitor",
    "displayName": "WebSocket Monitor for Antigravity",
    "description": "Automatic real-time capture of WebSocket traffic from Antigravity chat",
    "version": "1.0.0",
    "publisher": "antigravity-research",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "wsMonitor.start",
                "title": "WebSocket Monitor: Start Capture"
            },
            {
                "command": "wsMonitor.stop",
                "title": "WebSocket Monitor: Stop Capture"
            },
            {
                "command": "wsMonitor.export",
                "title": "WebSocket Monitor: Export to JSON"
            },
            {
                "command": "wsMonitor.showDashboard",
                "title": "WebSocket Monitor: Show Live Dashboard"
            },
            {
                "command": "wsMonitor.clearData",
                "title": "WebSocket Monitor: Clear Captured Data"
            },
            {
                "command": "wsMonitor.stats",
                "title": "WebSocket Monitor: Show Statistics"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "wsMonitorContainer",
                    "title": "WebSocket Monitor",
                    "icon": "$(radio-tower)"
                }
            ]
        },
        "views": {
            "wsMonitorContainer": [
                {
                    "id": "wsMonitorView",
                    "name": "Live Capture"
                }
            ]
        }
    }
}